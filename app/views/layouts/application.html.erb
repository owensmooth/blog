<!DOCTYPE html>
<html>
  <head>
    <title>Owen Smooth Wuk Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class ='o-container'>
      <div class='o-container_nav'>
        <div class='c-navigation'>
          <div class='c-navigation_logo'>
            <%= image_tag('os-logo.png') %>
            <div class='c-navigation_links'>
              <%= link_to 'Admin', admin_articles_path %> |
              <%= link_to 'My Blog', articles_path %>
            </div>
          </div>
        </div>
      </div>
      <div class='o-container_content'>
        <div class='c-content'>
          <div class='c-content_body'>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
